{
    "compilerOptions": {
        "target": "es2020",
        "moduleResolution": "node",
        "strict": false,
        "importHelpers": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "lib",
        "typeRoots": ["node_modules/@types", "src/types"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}
